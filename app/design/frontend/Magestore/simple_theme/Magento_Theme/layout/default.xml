<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="header.panel">
            <block class="Magento\Cms\Block\Block" name="header_contacts" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">header_contacts</argument>
                    <argument name="cache_lifetime" xsi:type="string">3600</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="header" remove="true"/>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">150</argument>
                <argument name="logo_img_height" xsi:type="number">150</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer-container">
            <container name="subscribe_container" htmlClass="subscribe-container" htmlTag="div" before="-">
                <container name="page_main" label="Before Page Footer" htmlTag="div" htmlClass="page-main subscribe-container" before="-"/>
            </container>
        </referenceContainer>
        <move element="form.subscribe" destination="page_main" before="-" />
    </body>
</page>
